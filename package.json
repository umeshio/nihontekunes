{
  "name": "website-template",
  "version": "1.0.0",
  "description": "参考→https://github.com/manabuyasuda/website-template/",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development gulp",
    "release": "cross-env NODE_ENV=production gulp build",
    "check-types": "tsc --noEmit",
    "format-js": "prettier --write './src/assets/js/**/*.{js,ts}'",
    "lint-js": "eslint --fix './src/assets/js/**/*.{js,ts}'",
    "fix-js": "npm run format-js && npm run lint-js",
    "format-css": "prettier --write './src/assets/css/**/*.scss'",
    "lint-css": "stylelint --fix './src/assets/css/**/*.scss'",
    "fix-css": "npm run format-css && npm run lint-css",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ]
  },
  "author": "naosuke wakahara",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "browser-sync": "^2.27.7",
    "browsersync-ssi": "^0.2.4",
    "cross-env": "^7.0.3",
    "del": "^6.0.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "fs": "0.0.1-security",
    "gulp": "^4.0.2",
    "gulp-cached": "^1.1.1",
    "gulp-changed": "^4.0.3",
    "gulp-clean-css": "^4.3.0",
    "gulp-data": "^1.3.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-notify": "^4.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-pug": "^5.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sass-glob": "^1.1.0",
    "husky": "^7.0.4",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "lint-staged": "^12.3.4",
    "node-sass": "^7.0.1",
    "path": "^0.12.7",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "prettier": "2.5.1",
    "sass": "^1.49.8",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.1.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-stream": "^7.0.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@babel/runtime": "^7.17.2",
    "@babel/runtime-corejs3": "^7.17.2",
    "@types/imagesloaded": "^4.1.2",
    "core-js": "^3.21.1",
    "element-closest-polyfill": "^1.0.4",
    "imagesloaded": "^5.0.0",
    "in-view": "^0.6.1",
    "jquery": "^3.6.0",
    "object-fit-images": "^3.2.4"
  }
}
